<a href="http://localhost:4020/articles">
    <button class="btn btn-dark">Back to all Articles</button>
</a>

<header class="header">
    <img id="onion" src="images/onion.png">
    <h1 id="title">Reductress Scraper</h1>
    <img id="scraper" src="images/scraper.png">
</header>


<br>
<br>
<div class="cardDisplay">
    {{#each results}} {{#if summary}}


    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{image}}" alt="Card image cap">
        <div class="card-body">
            <a href="{{URL}}">
                <h5 class="card-title">{{title}}</h5>
            </a>
            <p class="card-text">{{summary}}</p>
            <button data-toggle="modal" data-URL="{{this.URL}}" data-target="#{{@index}}noteModal" id="notesBtn" data-id="{{_id}}" class="btn notesBtn btn-dark">Notes</button>
            <button id="removeBtn" data-id="{{_id}}" class="btn removeBtn btn-dark">Remove</button>
        </div>
    </div>


    <div class="modal fade" id="{{@index}}noteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h4>Notes on: "{{title}}"</h4>
                    <br>
                    <div class="noteDisplay">
                        <ul>
                            {{#each notes}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    <br>
                    <form>
                        <div class="form-group">
                            <textarea class="form-control" placeholder="Type notes about this article here" type="text" name="note" id="note"></textarea>
                        </div>
                        <div class="form-group">
                            <button id="addNote" data-URL="{{URL}}" class="btn btn-dark" type="submit">Add Note</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    {{/if}} {{/each}}

</div>